<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="right"
                android:background="@color/colorPrimary" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/btn_back"
                        android:src="@drawable/icon_back"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/shop_detail"
                        android:textColor="@color/white"
                        android:id="@+id/txt_go_back"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/save"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:id="@+id/btn_save"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:background="@color/white"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:id="@+id/icon"
                        android:src="@drawable/default_store"
                        android:cropToPadding="false"
                        android:layout_weight="0.0001" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:clickable="false"
                    android:gravity="right">

                    <Button
                        android:id="@+id/btn_edit"
                        android:layout_width="60dp"
                        android:textAllCaps="false"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="@string/edit"
                        android:textColor="@color/font_color_pirmary"
                        android:background="@drawable/my_button_bg_2"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:layout_marginRight="5dp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/thin_grey_line_to_cut"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:weightSum="1"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:clickable="false"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView12"
                        android:src="@drawable/default_image" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:baselineAligned="false"
                        android:clickable="false"
                        android:gravity="right">

                        <Button
                            android:id="@+id/button"
                            android:layout_width="60dp"
                            android:textAllCaps="false"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:text="@string/edit"
                            android:textColor="@color/font_color_pirmary"
                            android:background="@drawable/my_button_bg_2"
                            android:clickable="true"
                            android:contextClickable="true"
                            android:layout_marginRight="7dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/thin_grey_line_to_cut"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/shop_name"
                    android:textSize="13dp"
                    android:textColor="@color/font_color_pirmary"
                    android:id="@+id/textView20"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="end" >

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Shop Limited"
                        android:textSize="13dp"

                        android:textColor="@color/color_pressed"
                        android:id="@+id/txt_nickName"
                        android:gravity="right"
                        android:layout_gravity="center" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/thin_grey_line_to_cut"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/tel"
                    android:textSize="13dp"
                    android:textColor="@color/font_color_pirmary"
                    android:id="@+id/textView32"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="end" >

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="+852 2323 3232"
                        android:textSize="13dp"
                        android:textColor="@color/color_pressed"
                        android:id="@+id/textView33"
                        android:gravity="right"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/thin_grey_line_to_cut"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/address"
                    android:textSize="13dp"
                    android:textColor="@color/font_color_pirmary"
                    android:id="@+id/textView34"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="end" >

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Shop 1A-1B, G/F, Leishun Court, 106-126 Leighton Road, Causeway Bay"
                        android:textSize="13dp"
                        android:textColor="@color/color_pressed"
                        android:id="@+id/textView35"
                        android:gravity="right"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/thin_grey_line_to_cut"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/open_close"
                    android:textSize="13dp"
                    android:textColor="@color/font_color_pirmary"
                    android:id="@+id/textView36"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="end" >

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Monday - Friday  9:00 - 18:00 \n Saturday - Sunday 10:00 - 20:00"
                        android:textSize="13dp"
                        android:textColor="@color/color_pressed"
                        android:id="@+id/textView37"
                        android:gravity="right"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>



            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/thin_grey_line_to_cut"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/email"
                    android:textSize="13dp"
                    android:textColor="@color/font_color_pirmary"
                    android:id="@+id/textView59"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="end" >

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="abc123@gmail.com"
                        android:textSize="13dp"
                        android:textColor="@color/color_pressed"
                        android:id="@+id/textView60"
                        android:gravity="right"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/facebook"
                    android:textSize="13dp"
                    android:textColor="@color/font_color_pirmary"
                    android:id="@+id/textView38"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="170dp"
                        android:textAllCaps="false"
                        android:layout_height="30dp"
                        android:layout_gravity="center|right"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="@string/connect_with_facebook"
                        android:textColor="@color/font_color_pirmary"
                        android:background="@drawable/my_button_bg_2"
                        android:clickable="true"
                        android:contextClickable="true" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/thin_grey_line_to_cut"
                android:layout_marginTop="3dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/description"
                    android:textSize="13dp"
                    android:textColor="@color/font_color_pirmary"
                    android:id="@+id/textView61"
                    android:layout_gravity="left|center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|end" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="The Camera Shop in Bryn Mawr is an independent, family-owned and operated business that has served the Philadelphia area since 1920. They have been at their current location on Lancaster Avenue in Bryn Mawr since the late 1970s."
                        android:textSize="13dp"
                        android:textColor="@color/color_pressed"
                        android:id="@+id/textView62"
                        android:layout_gravity="left" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/thin_grey_line_to_cut"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/change_password"
                    android:textSize="13dp"
                    android:textColor="@color/color_pressed"
                    android:id="@+id/change_password"
                    android:layout_weight="0.22"
                    android:layout_gravity="center" />

            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#fafafa"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>



